.body
  .contents
    = render partial: "users/header"
    .contents__main
      .login-main
        .login-head
          %p
            アカウントをお持ちでない方はこちら
          .login-head__new
            %p
              =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                新規会員登録
        .login-bottom
          .login-bottom__bars
            .login-facebook
              %p
                =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                  = icon('fab', 'facebook-square')
                  Facebookでログイン
                  
            .login-google
              %p
                =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                  %img{:alt => "mercari", :src => "//www.mercari.com/jp/assets/img/common/common/google.svg"}/
                  Googleでログイン
          .login-bottom__add
            .login-mail
              %input.login-input-text.input-default{:name => "email", :placeholder => "メールアドレス", :type => "email", :value => ""}/
            .login-pass
              %input.login-input-text.input-default{:name => "email", :placeholder => "パスワード", :type => "email", :value => ""}/
            .form-robot
              .g-recaptcha.login-captcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
                %div{:style => "width: 304px; height: 78px;"}
