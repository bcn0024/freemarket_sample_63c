.body
  .contents
    %header.single-header
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3249637286"}/
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li.through
            会員情報
            .progress-status
          %li.active
            電話番号認証
            .progress-status
          %li
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
    .contents-main
      .contents-add-input
        .add-head
          %h2
            支払い方法
        .add-bottom
          .add-bottom__name
            %label
              カード番号
            %span
              必須
            .name-first
              %input.input-default{:name => "phone_number", :placeholder => "半角英数字のみ ", :type => "tel", :value => ""}/
            .card-image
              =image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Visa_2014_logo_detail.svg/1200px-Visa_2014_logo_detail.svg.png",height: "20px",width: "40px",class:"header-image",alt: "")
              =image_tag("https://cdn-ak.f.st-hatena.com/images/fotolife/s/styrome/20190112/20190112114742.jpg",height: "20px",width: "40px",class:"header-image",alt: "")
              =image_tag("https://www.saisoncard.co.jp/cmn_data/img/apple-touch-icon.png",height: "20px",width: "40px",class:"header-image",alt: "")
              =image_tag("https://i2.wp.com/creditcard-site.com/images/jcb_logo.jpg?fit=600%2C370&ssl=1",height: "20px",width: "40px",class:"header-image",alt: "")
              =image_tag("http://www.netmile.co.jp/contents/wp-content/uploads/2016/09/cw_27top.jpg",height: "20px",width: "40px",class:"header-image",alt: "")
              =image_tag("https://tabi-mile.com/wp-content/uploads/2015/02/0356_diners_club_logo.jpg",height: "20px",width: "40px",class:"header-image",alt: "")
              -# =image_tag("https://blog.mudora.jp/wp-content/uploads/2015/12/credit.jpg",height: "20px",width: "40px",class:"header-image",alt: "")
              -# -# =image_tag("/assets/card",height:"50px",width: "100%")
          .add-bottom__remit
            %label
              有効期限
            %span
              必須
            .remit-card
              =icon('fas', 'chevron-down')
              %select.default{name: "month"}
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %p
                月
            .remit-card
              =icon('fas', 'chevron-down')
              %select.default{name: "year"}
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %p
                年
          .add-bottom__name
            %label
              セキュリティコード
            %span
              必須
            .name-first
              %input.input-default{:name => "phone_number", :placeholder => "カードの背面もしくは３桁の番号 ", :type => "tel", :value => ""}/
          .card-content-question  
            =link_to "https://www.mercari.com/jp/privacy/", class:"question-card" do
              ?
            =link_to "https://www.mercari.com/jp/privacy/", class:"question-message" do
              カードの背面の番号とは？ 
          .next-button
            %button.login-submit.btn-default.btn-red{:type => "submit"} 次へ進む 
