.body
  .contents
    .contents__header
      %h1
        =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
          = image_tag("/images/fmarket_logo_red.svg",alt: "mercari")
      %nav.progress
        %ol.clearfix
          %li.active
            会員情報
            .progress-status
          %li
            電話番号認証
            .progress-status
          %li
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
    .contents__main
      .main-head
        .main-head__confirmation
          発送元・お届け先住所入力
        .buy-contents
          .content
            .purchase-pref
              = form_for @address, method: :get, url: step4_signup_index_path do |f|
                .form-group-first
                  %label{for: "zip_code1"} 郵便番号
                  %span.require 必須
                  = f.text_field :postal_code, maxlength: "8", pattern: "\\d{3}-\\d{4}", placeholder: "例) 123-4567", type: "text", value: "", class: "input-form"
                .form-group
                  %label{for: "prefecture"} 都道府県
                  %span.require 必須
                  .select-wrap
                    %i.arrow-bottom
                    = f.select :prefectures, [["---", "---"], ["北海道", "北海道"], ["青森県", "青森県"], ["岩手県", "岩手県"], ["宮城県", "宮城県"], ["秋田県", "秋田県"], ["山形県", "山形県"], ["福島県", "福島県"], ["茨城県", "茨城県"], ["栃木県", "栃木県"], ["群馬県", "群馬県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["東京都", "東京都"], ["神奈川県", "神奈川県"], ["新潟県", "新潟県"], ["富山県", "富山県"], ["石川県", "石川県"], ["福井県", "福井県"], ["山梨県", "山梨県"], ["長野県", "長野県"], ["岐阜県", "岐阜県"], ["静岡県", "静岡県"], ["愛知県", "愛知県"], ["三重県", "三重県"], ["滋賀県", "滋賀県"], ["京都府", "京都府"], ["大阪府", "大阪府"], ["兵庫県", "兵庫県"], ["奈良県", "奈良県"], ["和歌山県", "和歌山県"], ["鳥取県", "鳥取県"], ["島根県", "島根県"], ["岡山県", "岡山県"], ["広島県", "広島県"], ["山口県", "山口県"], ["徳島県", "徳島県"], ["香川県", "香川県"], ["愛媛県", "愛媛県"], ["高知県", "高知県"], ["福岡県", "福岡県"], ["佐賀県", "佐賀県"], ["長崎県", "長崎県"], ["熊本県", "熊本県"], ["大分県", "大分県"], ["宮崎県", "宮崎県"], ["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"],["未定", "未定"]],class:"form-control"
                .form-group
                  %label{for: "address1_label"} 市区町村
                  %span.require 必須
                  = f.text_field :address, placeholder: "例) 横浜市緑区", class:'default', value:"", class: "input-form"
                .form-group
                  %label{for: "address1_label"} 番地
                  %span.require 必須
                  = f.text_field :municipalities, placeholder: "例) 青山1−1−1", class:'default', value:"", class: "input-form"
                .form-group
                  %label{for: "address2_label"} 建物名
                  %any.arbitrary 任意
                  = f.text_field :building, placeholder: "例) 柳ビル103", class:'default', value:"", class: "input-form"
                %h2
                  = f.submit "次へ進む", class: 'btn-red'
    = render partial: "layouts/footer"