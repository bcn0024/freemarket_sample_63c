.body
  .contents
    = render partial: "layouts/header"
    .contents__main
      .login-main
        .login-head
          %p
            アカウントをお持ちでない方はこちら
          .login-head__new
            %p
              =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                新規会員登録
        .login-bottom
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .login-bottom__bars
              .login-facebook
                %p
                  =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                    = icon('fab', 'facebook-square')
                    Facebookでログイン
                    
              .login-google
                %p
                  =link_to "https://www.mercari.com/jp/", class: "mercari-icon", id:"" do
                    %img{:alt => "mercari", :src => "//www.mercari.com/jp/assets/img/common/common/google.svg"}/
                    Googleでログイン
            .login-bottom__add
              .login-mail
                = f.email_field :email,placeholder: "メールアドレス", type: "email", value: "",class:"login-input-text.input-default"
              .login-pass
                = f.password_field :password,placeholder: "パスワード", type: "password", value: "",class:"login-input-text.input-default"
