.body
  =render "users/mainheader"
  =render "users/pankuzu"
  .main
    .main-box
      =render "users/sidebar"
      .card-info
        .credit_box
          .box_top
            支払い方法
        - if @card.blank?
          .box_main
            .box_content
              .box_content__show
                クレジットカード一覧
              
              .box_content__add
                .add-content
                  =link_to "/users/#{current_user.id}/card/new", class: "add-content__link" do
                    = icon('fas', 'credit-card', class: 'add-content__icon')
                    クレジットカードを追加する

          .box_footer
            =link_to "#", class: "box_footer__link" do
              %span 支払い方法について 
              = icon('fas', 'chevron-right')
        - else
          .contents
            .contents__main
              .main-head
                .buy-user-info2
                  .buy-content-inner
                    .inner
                      クレジットカード一覧
                    .number
                      .figure
                        %img{alt: "jcb", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2177740229", width: "26"}/
                      .secret-number
                        = "**** **** **** " + @default_card_information.last4
                      .year-month
                        - exp_month = @default_card_information.exp_month.to_s
                        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                        = exp_month + " / " + exp_year
                      = form_tag"/users/#{current_user.id}/card/3", method: :delete, id: 'charge-form',  name: "inputForm" do
                        %input{ type: "hidden", name: "card_id", value: "" }
                        %button 削除する
  =render "users/footer-imag"
  =render "layouts/mainfooter"

