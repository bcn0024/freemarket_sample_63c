=render partial: "users/mainheader"
- breadcrumb :edit
= breadcrumbs separator: "<i class='fas fa-angle-right'></i>"
.main-right-main
  =render partial: "sidebar"
  .main-right
    %h2.check
      本人情報の登録

    .main_form
      = form_for [@address] do |f|
        .form_head
          %p.form_head__message 
            お客様の本人情報をご登録ください。<br>登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          %p.form_head__upload
            =link_to "#", class: "form_head__link" do
              本人確認書類のアップロードについて
              = icon('fas', 'chevron-right')

        .form_box
          = f.label "お名前"
          %p 
            新見 一起

        .form_box
          = f.label "お名前カナ"
          %p 
            シンミ カズキ

        .form_box
          = f.label "お名前" 
          %p 
            新見 一起

        .form_box
          = f.label :birthday, "生年月日"
          %p 
            1997/01/01

        .form_box
          = f.label "郵便番号"
          %span 任意
          = f.text_field :postal_code, class: 'form_box__input', placeholder: '例) 1234567'

        .form_box
          = f.label "都道府県"
          %span 任意
          .form_box__select
            =icon('fas', 'chevron-down')
            = f.select :prefectures, [["---", "---"], ["北海道", "北海道"], ["青森県", "青森県"], ["岩手県", "岩手県"], ["宮城県", "宮城県"], ["秋田県", "秋田県"], ["山形県", "山形県"], ["福島県", "福島県"], ["茨城県", "茨城県"], ["栃木県", "栃木県"], ["群馬県", "群馬県"], ["埼玉県", "埼玉県"], ["千葉県", "千葉県"], ["東京都", "東京都"], ["神奈川県", "神奈川県"], ["新潟県", "新潟県"], ["富山県", "富山県"], ["石川県", "石川県"], ["福井県", "福井県"], ["山梨県", "山梨県"], ["長野県", "長野県"], ["岐阜県", "岐阜県"], ["静岡県", "静岡県"], ["愛知県", "愛知県"], ["三重県", "三重県"], ["滋賀県", "滋賀県"], ["京都府", "京都府"], ["大阪府", "大阪府"], ["兵庫県", "兵庫県"], ["奈良県", "奈良県"], ["和歌山県", "和歌山県"], ["鳥取県", "鳥取県"], ["島根県", "島根県"], ["岡山県", "岡山県"], ["広島県", "広島県"], ["山口県", "山口県"], ["徳島県", "徳島県"], ["香川県", "香川県"], ["愛媛県", "愛媛県"], ["高知県", "高知県"], ["福岡県", "福岡県"], ["佐賀県", "佐賀県"], ["長崎県", "長崎県"], ["熊本県", "熊本県"], ["大分県", "大分県"], ["宮崎県", "宮崎県"], ["鹿児島県", "鹿児島県"], ["沖縄県", "沖縄県"],["未定", "未定"]]

        .form_box
          = f.label "市区町村"
          %span 任意
          = f.text_field :municipalities, class: 'form_box__input', placeholder: '例)横浜市緑区'

        .form_box
          = f.label "番地"
          %span 任意
          = f.text_field :address, class: 'form_box__input', placeholder: '例) 青山1-1-1'
          
        .form_box
          = f.label "建物名"
          %span 任意
          = f.text_field :building, class: 'form_box__input', placeholder: '例)柳ビル103'

        = f.submit "登録する", class: "form_submit"
          
