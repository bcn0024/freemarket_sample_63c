.body
  .contents
    = render partial: "layouts/header"
    .contents__main
      .container
        %h2.registration
          新規会員登録
        .registration-form
          .form-contents
            =link_to new_user_registration_path, class: "mail", id:"" do
              = icon('fas', 'envelope', class: "mail-icon")
              メールアドレスで登録する
            %button.facebook
              = icon('fab', 'facebook-square', class: "facebook-icon")
              Facebookで登録する
            %button.google
              Googleで登録する
    = render partial: "layouts/footer"