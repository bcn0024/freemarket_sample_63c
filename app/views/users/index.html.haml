.body
  .contents
    = render partial: "shared/header"
    .contents__main
      .container
        %h2.registration
          新規会員登録
        .registration-form
          .form-contents
            =link_to step1_signup_index_path, class: "mail", id:"" do
              = icon('fas', 'envelope', class: "mail-icon")
              メールアドレスで登録する
            = button_to user_facebook_omniauth_authorize_path, method: :post, class:"facebook" do
              = icon('fab', 'facebook-square', class: "facebook-icon")
              Facebookで登録
            = button_to "googleで登録",user_google_oauth2_omniauth_authorize_path, method: :post, class:"google"
    = render partial: "shared/footer"