.body
  .contents
    %header.single-header
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3249637286"}/
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li.through
            会員情報
            .progress-status
          %li.active
            電話番号認証
            .progress-status
          %li
            お届け先住所入力
            .progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
    .contents-main
      .contents-add-input
        .add-head
          %h2
            住所入力
        .add-bottom
          .add-bottom__name
            %label
              お名前
            %span
              必須
            .name-first
              %input.input-default{:name => "phone_number", :placeholder => "例）山田", :type => "tel", :value => ""}/
            .name-ol
              %input.input-default{:name => "phone_number", :placeholder => "例）彩", :type => "tel", :value => ""}/
          .add-bottom__kana
            %label
              お名前カナ
            %span
              必須
            .kana-first
              %input.input-default{:name => "phone_number", :placeholder => "例）ヤマダ", :type => "tel", :value => ""}/
            .kana-ol
              %input.input-default{:name => "phone_number", :placeholder => "例）アヤ", :type => "tel", :value => ""}/
          .add-bottom__add-number
            %label
              郵便番号
            %span
              必須
